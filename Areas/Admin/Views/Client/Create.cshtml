@using CarVilla.Areas.ViewModels
@model CreateClientVm;




<form method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Client Name</label>
        <input asp-for="Name" type="text" class="form-control" aria-describedby="emailHelp">
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <input asp-for="Description" type="text" class="form-control" aria-describedby="emailHelp">
    </div>
    <div class="mb-3">
        <label asp-for="CityLocation" class="form-label">Location(City)</label>
        <input asp-for="CityLocation" type="text" class="form-control" aria-describedby="emailHelp">
    </div>
    <div class="input-group mb-3">
        <label asp-for="ImageUrl" class="input-group-text">Upload Profile Photo</label>
        <input asp-for="ImageUrl" type="file" class="form-control">
    </div>

    <div style="color:red" asp-validation-summary="All"></div>
    <button asp-action="Create" asp-controller="Client" type="submit" class="btn btn-primary">Create</button>
</form>